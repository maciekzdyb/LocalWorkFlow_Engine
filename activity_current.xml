<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_current"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="inz.lwe_v103.CurrentActivity">

    <TextView
        android:text=""
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/textViewId"
        android:id="@+id/textViewTo" />

    <TextView
        android:text="Activity:"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="25dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="Id: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:text="Send to:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:text=""
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:id="@+id/textViewId" />

    <TextView
        android:text="Next Activity:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_alignBaseline="@+id/textViewNextActivity"
        android:layout_alignBottom="@+id/textViewNextActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTo1"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textViewTo2"
        android:layout_alignStart="@+id/textViewTo2" />

    <TextView
        android:text=""
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTo2"
        android:layout_below="@+id/textViewTo1"
        android:layout_alignLeft="@+id/textViewTo3"
        android:layout_alignStart="@+id/textViewTo3" />

    <TextView
        android:text=""
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTo3"
        android:layout_below="@+id/textViewTo2"
        android:layout_alignLeft="@+id/textViewAttachment"
        android:layout_alignStart="@+id/textViewAttachment" />

    <TextView
        android:text=""
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTo4"
        android:layout_below="@+id/textViewTo3"
        android:layout_alignLeft="@+id/textViewTo3"
        android:layout_alignStart="@+id/textViewTo3" />

    <TextView
        android:text=""
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTransition"
        android:layout_below="@+id/textViewTo4"
        android:layout_alignLeft="@+id/textViewTo4"
        android:layout_alignStart="@+id/textViewTo4"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="Transition:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/textViewTransition"
        android:layout_alignBottom="@+id/textViewTransition"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:text=""
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAttachment"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textViewTo"
        android:layout_alignStart="@+id/textViewTo"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="Attachment:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignBaseline="@+id/textViewAttachment"
        android:layout_alignBottom="@+id/textViewAttachment"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <TextView
        android:text=""
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNextActivity"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/buttonClose"
        android:layout_toEndOf="@+id/buttonClose" />

    <Button
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonClose"
        android:onClick="buttonCloseOnClick"
        android:layout_below="@+id/textViewNextActivity"
        android:layout_toLeftOf="@+id/textViewAttachment"
        android:layout_toStartOf="@+id/textViewAttachment"
        android:layout_marginTop="13dp" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSend"
        android:layout_alignBaseline="@+id/buttonClose"
        android:layout_alignBottom="@+id/buttonClose"
        android:layout_alignRight="@+id/textViewNextActivity"
        android:layout_alignEnd="@+id/textViewNextActivity" />

    <Button
        android:text="edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonClose"
        android:layout_alignLeft="@+id/buttonClose"
        android:layout_alignStart="@+id/buttonClose"
        android:layout_marginTop="19dp"
        android:id="@+id/buttonEdit" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonEdit"
        android:layout_alignEnd="@+id/buttonEdit"
        android:id="@+id/buttonClear" />

</RelativeLayout>
