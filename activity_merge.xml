<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_merge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="inz.lwe_v103.MergeActivity">

    <TableLayout
        android:layout_marginTop="60dp"
        android:id="@+id/mergeTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </TableLayout>

    <Button
        android:text="Check Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/mergeTableLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonCheckEmail" />

    <TextView
        android:text="Activity:"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonCheckEmail"
        android:layout_alignEnd="@+id/buttonCheckEmail"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:id="@+id/textView" />

    <Button
        android:text="Refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonCheckEmail"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:id="@+id/buttonRefresh" />

    <Button
        android:text="clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonRefresh"
        android:layout_alignLeft="@+id/buttonRefresh"
        android:layout_alignStart="@+id/buttonRefresh"
        android:layout_marginTop="41dp"
        android:id="@+id/buttonClearMerge" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonClearMerge"
        android:layout_alignRight="@+id/buttonMergeSend"
        android:layout_alignEnd="@+id/buttonMergeSend"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/button3Send" />

    <Button
        android:text="Transform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMergeSend"
        android:layout_alignBaseline="@+id/buttonCheckEmail"
        android:layout_alignBottom="@+id/buttonCheckEmail"
        android:layout_toRightOf="@+id/buttonCheckEmail"
        android:layout_toEndOf="@+id/buttonCheckEmail" />
</RelativeLayout>
